<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

	<head>
		<css src="Neo_Gallery::css/owl.carousel.css"/>
        <css src="Neo_Gallery::css/owl.theme.default.css"/>
		<css src="Neo_Gallery::css/magnific-popup.css" />
        <css src="Neo_Gallery::css/slider.css" />
    </head> 

    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Neo Gallery 2</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Neo\Gallery\Block\Gallery\Index" name="gallery_index_index" template="Neo_Gallery::gallery_index_index.phtml"/>
        </referenceContainer>
    </body>
</page>